{% extends 'base.html.twig' %}

{% block title %}Hello EntrepriseController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
<h2>Entreprise : {{entreprise.name}}</h2>
<h3>{{entreprise.description}}</h3>
{% for adresse in adresses %}
    <ul>
        <li>{{ adresse.label }}</li>
        <li>{{ adresse.complement }}</li>
        <li>{{ adresse.zipCode }}</li>
        <li>{{ adresse.ville }}</li>
    </ul>
{% endfor %}
{% for produit in produits %}
    <ul>
        <li>{{ produit.name }}</li>
        <li>{{ produit.inStock }}</li>
        <li>{{ produit.description }}</li>
        <li>{{ produit.imageURL }}</li>
    </ul>
<img src="{{ produit.imageURL }}">

{% endfor %}

{# <h3>{{entreprise}}</h3> #}

{{dump(entreprise)}}

</div>
{% endblock %}
