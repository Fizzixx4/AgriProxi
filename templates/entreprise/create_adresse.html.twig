{% extends 'base.html.twig' %}

{% block title %}AgriProxi | Adresse{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('adresse') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('adresse') }}
{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Mon adresse</h1>

    {{ form(form_adresse) }}

    <div id="displayCities">
    
    </div>

    {% if message %}
        <div>{{ message }}</div>
    {% endif %}
    
    {% if app.user %}
    <a href="{{path('app_user')}}">Retour</a>
    {% endif %}

</div>
{% endblock %}